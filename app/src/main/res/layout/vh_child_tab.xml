<?xml version="1.0" encoding="utf-8"?>
<hmju.widget.view.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_margin="10dp"
    android:gravity="center"
    android:includeFontPadding="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:textViewBgColor="@color/black"
    app:textViewCorner="15dp"
    app:textViewDefState="false"
    app:textViewDisableBgColor="@color/white"
    app:textViewDisableBorder="2dp"
    app:textViewDisableBorderColor="#999999"
    app:textViewDisableCorner="15dp"
    app:textViewTxtColor="@color/white"
    tools:text="TabTitle" />