<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SampleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SampleText.Bold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleText.Medium">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SampleTab">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SampleTab.Enable">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleTab.Disable">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize20" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.corner50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>