<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="hmju.widget.tablayout.PagerTabItem" />

        <variable
            name="listener"
            type="hmju.widget.tablayout.BaseTabLayout.Listener" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="@{(v)->listener.onTabClick(item.pos,v)}"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textColor="@{item.isSelected == true ? item.txtColor : item.disableTxtColor}"
            android:textSize="@{item.txtSize}"
            app:isSelected="@{item.isSelected}"
            tools:text="제목텝" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>
