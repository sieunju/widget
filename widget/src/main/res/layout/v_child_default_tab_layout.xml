<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="hmju.widget.tablayout.PagerTabItem" />

        <variable
            name="listener"
            type="hmju.widget.tablayout.BaseTabLayout" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
<!--        android:onClick="@{(v)->listener.onTabClick(item.pos,v)}"-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="제목텝" />

<!--        app:tabTextStyle="@{item.isSelected() == true ? item.enableTextStyle : item.disableTextStyle}"-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>